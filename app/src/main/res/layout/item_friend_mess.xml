<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/rltAvataMess"
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avataFriends"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:visibility="gone"
            android:id="@+id/StatusFriend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/button_video_img_personal"
            android:backgroundTint="#13FF66"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearMess"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtUserNameFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Minh Thắng"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>