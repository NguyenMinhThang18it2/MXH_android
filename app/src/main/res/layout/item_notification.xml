<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/RelativeNotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imguser"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avataUserNotify"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user"
                tools:ignore="MissingConstraints" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgStatusNotify"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:civ_border_width="0.1dip"
                app:civ_border_color="@color/colorText"
                android:src="@drawable/ic_camera"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/avataUserNotify"
                app:layout_constraintTop_toTopOf="@+id/avataUserNotify"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/imguser"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:maxHeight="70dp"
                android:maxWidth="260dp"
                android:id="@+id/txtDocumentNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14dp"
                android:fontFamily="sans-serif-medium"
                android:text="Thắng Nguyễn "
                />
            <TextView
                android:id="@+id/txtTimeNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/imgMenuNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="191dp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:background="?android:attr/selectableItemBackground"
            />

    </RelativeLayout>
</RelativeLayout>